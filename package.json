{
  "name": "monkeyminds-tools",
  "version": "1.0.0",
  "description": "Static CDN for MonkeyMinds custom web solutions",
  "scripts": {
    "build": "webpack --mode=production --env minified=true && npm run build:css",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./dist/styles/monkeyminds.css --minify",
    "build:dev": "webpack --mode=development --watch",
    "build:min": "webpack --mode=production --env minified=true",
    "dev": "npm run build && npx serve dist -p 3000",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cdn",
    "static",
    "solutions",
    "typescript",
    "monkeyminds"
  ],
  "author": "MonkeyMinds",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "serve": "^14.2.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
