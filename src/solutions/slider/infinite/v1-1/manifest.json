{
  "name": "Infinite Slider",
  "version": "1.1.0",
  "domain": "slider",
  "solution": "infinite",
  "mode": "marquee",
  "description": "GSAP-powered continuous marquee slider with seamless infinite loop",
  "dependencies": {
    "gsap": "^3.12.0"
  },
  "attributes": {
    "container": {
      "mm-tool": {
        "required": true,
        "value": "infinite-slider",
        "description": "Identifies the slider container"
      },
      "mm-slider-speed": {
        "required": false,
        "type": "number",
        "default": 50,
        "description": "Scroll speed in pixels per second"
      },
      "mm-slider-direction": {
        "required": false,
        "type": "string",
        "values": ["left", "right"],
        "default": "left",
        "description": "Direction of marquee movement"
      },
      "mm-slider-gap": {
        "required": false,
        "type": "number",
        "default": 20,
        "description": "Spacing between items in pixels"
      },
      "mm-slider-pauseonhover": {
        "required": false,
        "type": "boolean",
        "default": true,
        "description": "Whether to pause animation on hover"
      }
    },
    "elements": {
      "mm-slider-element": {
        "track": {
          "required": true,
          "description": "Container for slider items"
        },
        "item": {
          "required": true,
          "description": "Individual slide item (multiple required)"
        }
      }
    }
  },
  "features": [
    "Continuous seamless scrolling",
    "Auto-cloning for infinite loop",
    "Configurable speed and direction",
    "Hover pause (optional)",
    "Responsive width handling",
    "GSAP-powered smooth animation"
  ],
  "browserSupport": {
    "chrome": "90+",
    "firefox": "88+",
    "safari": "14+",
    "edge": "90+"
  },
  "fileSize": {
    "regular": "~4KB",
    "minified": "~2KB"
  }
}