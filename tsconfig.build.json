{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "removeComments": true
  },
  "include": [
    "temp-build/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}